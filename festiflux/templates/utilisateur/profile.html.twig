{% extends 'base.html.twig' %}

{% block title %}
	Profil de
	{{utilisateur.nom}}
	{{utilisateur.prenom}}
{% endblock %}

{% block body %}

	<div class="profil-box">
		<h1>
			Profil de
			{{ utilisateur.nom }}
			{{ utilisateur.prenom }}
		</h1>

		<div class="info-box-wrapper">
			<div class="image_profile">
				<img id="img-profil" {% if utilisateur.nomphotoprofil == true %} src="{{ asset("uploads/user/"~utilisateur.nomPhotoProfil~"") }}" {% else %} src="{{ asset("uploads/user/anonyme.png") }}" {% endif %}>
			</div>
			<div class="info-box">
				<div class="info-row">
					<div class="info-border">
						<strong>Email</strong>
						:
						{{ utilisateur.email }}

					</div>
					<div class="info-name-surname">
						<div class="info-border">
							<strong>Nom</strong>
							:
							{{ utilisateur.nom }}
						</div>

						<div class="info-border">
							<strong>Prénom</strong>
							:
							{{ utilisateur.prenom }}
						</div>
					</div>
					<div class="info-border">
						<strong>Adresse</strong>
						:
						{{ utilisateur.adresse }}

					</div>
					<div class="info-border biographie">
						<strong>Biographie</strong>
						:
						{{ utilisateur.description }}
					</div>
				</div>
			</div>

			<a href="{{ path('app_profile_edit', {'id' : utilisateur.getId()}) }}">
				<div class="edit-button">
					Modifier mon profil
				</div>
			</a>
		</div>
		<!-- Section des moyens de contact -->
		<div class="contact-section">
			<h2>Mes moyens de contact</h2>

			<!-- Carte pour l'e-mail -->
			<div class="contact-card">
				<h3>E-mail</h3>
				<p>john.doe@example.com</p>
				<!-- Boutons pour modifier ou supprimer le contact -->
			</div>

			<!-- Carte pour le numéro de téléphone -->
			<div class="contact-card">
				<h3>Téléphone</h3>
				<p>+1234567890</p>
				<!-- Boutons pour modifier ou supprimer le contact -->
			</div>

			<!-- Vous pouvez ajouter plus de cartes pour d'autres moyens de contact -->
		</div>
	</div>

{% endblock %}
