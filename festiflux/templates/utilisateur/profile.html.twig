{% extends 'base.html.twig' %}

{% block title %}
	Profil de
	{{utilisateur.nom}}
	{{utilisateur.prenom}}
{% endblock %}

{% block body %}

		<div class="profil-box">
			<h1>
				Profil de
				{{ utilisateur.nom }}
				{{ utilisateur.prenom }}
			</h1>

			<div class="info-box-wrapper">
				<div class="image_profile">
				<img id="img-profil" {% if utilisateur.nomphotoprofil == true %} 
						src="{{ asset("uploads/user/"~utilisateur.nomPhotoProfil~"") }}"
					 {% else %}
						src="{{ asset("uploads/user/anonyme.png") }}"
					 {% endif %}>
			    </div>
			<div class="info-box">
				<div class="info-row">
					<div class="info-border">
						<strong>Email</strong>
						:
						{{ utilisateur.email }}
						<a class="pen" href="{{ path('app_profile_edit', {'id' : utilisateur.getId()}) }}">游둘</a>
				    </div>
						<div class="info-name-surname">
							<div class="info-border">
