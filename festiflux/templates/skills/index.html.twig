{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title'|trans({},'skill') }}{{ utilisateur.nom }} {{ utilisateur.prenom }}
{% endblock %}

{% block body %}
    <h1>{{ 'title'|trans({},'skill') }}{{ utilisateur.nom }} {{ utilisateur.prenom }}</h1>

    <!-- Affichage des compétences sous forme de cartes -->
    <div class="contact-section">
        {% if skills is not empty %}        
            {% for skill in skills %}
            <div>
                {% include 'skills/skill.html.twig' with {
                    skill: {
                        name: skill.name,
                        level: skill.getLevelName()
                    }
                }%}
                <form type="submit" method="GET" action="{{path('app_user_skills_delete', {id: skill.getId()})}}"  >
                    <button class="delete-btn"><img src="{{asset("/img/contacts/trash.png")}}" alt=""></button>
                </form>
            </div>
            {% endfor %}
        {% else %}
            <p>{{ 'void'|trans({},'skill') }}</p>
        {% endif %}
    </div>


    <!-- Formulaire pour ajouter une nouvelle compétence -->
    <div class="add-contact-form">
        <h2>{{ 'addSkill'|trans({},'skill') }}</h2>
        <form action="{{path('app_user_skills_add')}}" method="post">
            <label for="level">{{ 'level'|trans({},'skill') }}</label>
            <select id="type" name="level">
                <!-- Ajoutez d'autres options si nécessaire -->
                <option value="1">{{ 'noob'|trans({},'skill') }}</option>
                <option value="2">{{ 'intermediate'|trans({},'skill') }}</option>
                <option value="3">{{ 'expert'|trans({},'skill') }}</option>
            </select>

            <label for="name">{{ 'skill'|trans({},'skill') }}</label>
            <input type="text" id="value" name="name" placeholder={{ 'placeholder'|trans({},'skill') }} >

            <button type="submit">{{ 'add'|trans({},'skill') }}</button>
        </form>
    </div>
{% endblock %}
