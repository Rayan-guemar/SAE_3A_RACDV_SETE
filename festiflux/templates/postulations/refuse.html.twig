{% extends 'base.html.twig' %}

{% block title %}
	{{ 'title'|trans({}, 'postulationrefuse') }}
	{{ postulation.utilisateur.nom }}
	{{ postulation.utilisateur.prenom  }}
{% endblock %}

{% block body %}
	<div class="postulation-page">
		<h1>	{{ 'title'|trans({}, 'postulationrefuse') }}
			{{ postulation.utilisateur.nom }}
			{{ postulation.utilisateur.prenom  }}
		</h1>

		<div class="postulation-container">
			<form action="{{path("app_postulations_refuse", {id: postulation.getId()})}}" method="post">
				<div>
					<label for="motif">	{{ 'motif'|trans({}, 'postulationrefuse') }}
					</label>
					<textarea id="motif" name="motif" placeholder="	{{ 'motifplaceholder'|trans({}, 'postulationrefuse') }}"></textarea>
				</div>
				<div class="buttons-container">
					<button class="_button refuse" type="submit">	{{ 'reject'|trans({}, 'postulationrefuse') }}
					</button>
				</div>
			</form>
		</div>
		<div>
			<a class="_button cancel" type="submit" href="{{path("app_postulations_postulation", {id: postulation.getId()})}}">	{{ 'cancel'|trans({}, 'postulationrefuse') }}
			</a>
		</div>

	</div>
{% endblock %}
