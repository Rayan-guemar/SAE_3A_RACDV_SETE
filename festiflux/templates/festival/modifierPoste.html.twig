{% extends "base.html.twig" %}
{% block title %}{{ 'title'|trans({},'modifypost') }}{% endblock %}

{% block body %}

    <div class="form-wrapper">
        <h1>{{ 'title'|trans({},'modifypost') }}</h1>

        {{ form_start(form, {'attr': {'class': 'festival-form'}}) }}

        {{ form_row(form.nom, {'label': 'name'|trans({},'modifypost'), 'attr': {'class': 'festival-form__input'}}) }}

        {{ form_widget(form.demanderModificationPoste, {'label': 'button'|trans({},'modifypost') , 'attr': {'class': 'festival-form__checkbox'}}) }}

        {{ form_end(form) }}
    </div>

{% endblock %}