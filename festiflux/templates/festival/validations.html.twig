{% extends 'base.html.twig' %}

{% block title %}
{{ 'title'|trans({}, 'validations') }}
	{{festival.getNom()}}
{% endblock %}

{% block body %}
	<h1>{{ 'h1'|trans({}, 'validations') }}
	</h1>

	{% if validations is not empty %}
		<table border="1">
			<thead>
				<tr>
					<th>{{ 'id'|trans({}, 'validations') }}
					</th>
					<th>{{ 'status'|trans({}, 'validations') }}
					</th>
					<th>{{ 'motif'|trans({}, 'validations') }}
					</th>
					<th>{{ 'date'|trans({}, 'validations') }}
					</th>
				</tr>
			</thead>
			<tbody>
				{% for validation in validations %}
					<tr>
						<td>{{ validation.id }}</td>
						<td>{{ validation.getStatusToString()  }}</td>
						<td>{{ validation.status == -1 ? validation.motif : "/" }}</td>
						<td>{{ validation.date | date("d/m/Y") }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>{{ 'void'|trans({}, 'validations') }}
		</p>
	{% endif %}
{% endblock %}
