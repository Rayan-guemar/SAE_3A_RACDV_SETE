{% extends 'base.html.twig' %}


{% block title %}{{'title'|trans({},'task') }}
{% endblock %}

{% block body %}

	<h1> {{'title'|trans({},'task') }} </h1>

	<div class="form-wrapper">
		{{ form_start(form) }}

		{{ form_row(form.nom, { 'label': false }) }}
		{{ form_row(form.lieu, { 'label': false }) }}
		<div class="form-row">
			{{ form_widget(form.heureDebut, {'label': 'datedeb'|trans({},'task'), 'attr': {'class': 'festival-form__input'} }) }}
			{{ form_widget(form.heureFin, {'label': 'dateend'|trans({},'task'), 'attr': {'class': 'festival-form__input'}}) }}
		</div>
		{{ form_widget(form.creerTache) }}

		{{ form_end(form) }}
	</div>


{% endblock %}
