{% extends "base.html.twig" %}
{% block title %}{{ 'title'|trans({},'addfest') }}{% endblock %}
{% block overhead %}
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
	<script src="{{ asset('js/mapAddFest.js') }}" defer></script>
	<link rel="stylesheet" href="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.css" />
	<script src="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.js" defer></script>

{% endblock %}
{% block body %}

	<div class="form-wrapper">
		<h1>{{ 'title'|trans({},'addfest') }}</h1>

		{{ form_start(form, {'attr': {'class': 'festival-form'}}) }}

		{{ form_row(form.nom, {'label': false, 'attr': {'class': 'festival-form__input', 'placeholder': 'name'|trans({},'addfest')  }}) }}
		{{ form_row(form.description, {'label': false, 'attr': {'class': 'festival-form__input', 'placeholder': 'description'|trans({},'addfest') }}) }}

		<div class="form-row" >
			{{ form_widget(form.dateDebut, {'label': 'Date de d√©but'}) }}
			{{ form_widget(form.dateFin, {'label': 'Date de fin'}) }}
		</div>
		<div id="box-adresses">
		{{ form_row(form.lieu, {'label': false, 'attr': {'class': 'festival-form__input', 'placeholder': 'localisation'|trans({},'addfest') }}) }}
			{{ form_row(form.lat,{'attr':{'id':'lat'}}) }}
			{{ form_row(form.lon,{'attr':{'id':'lon'}}) }}
		</div>
		{{ form_row(form.affiche, {'label': 'poster'|trans({},'addfest'), 'attr': {'class': 'festival-form__input', 'placeholder': 'poster'|trans({},'addfest') }}) }}

		{{ form_row(form.tags, {'label':false, 'attr': {'name':'tags'|trans({},'addfest'), 'class': 'festival-form__input', 'placeholder': 'tags'|trans({},'addfest') } })  }}

		{{ form_widget(form.demanderCreation, {'label': 'button'|trans({},'addfest'), 'attr': {'class': 'festival-form__checkbox'} }) }}

		{{ form_end(form) }}
	</div>
	<script type="text/javascript" src="{{ asset('js/Datepickers.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/Datepickers.js') }}"></script>

	<script type="application/javascript" src="{{ asset('js/Tags.js') }}"> </script>

{% endblock %}
